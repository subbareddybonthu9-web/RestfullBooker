      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "packages": {},
        "requests": {},
        "exec": [
          "if (!pm.environment.get(\"token\")) {\r",
          "\r",
          "    pm.sendRequest({\r",
          "        url: pm.environment.get(\"baseUrl\") + \"/auth\",\r",
          "        method: \"POST\",\r",
          "        header: {\r",
          "            \"Content-Type\": \"application/json\"\r",
          "        },\r",
          "        body: {\r",
          "            mode: \"raw\",\r",
          "            raw: JSON.stringify({\r",
          "                username: pm.environment.get(\"username\"),\r",
          "                password: pm.environment.get(\"password\")\r",
          "            })\r",
          "        }\r",
          "    }, function (err, res) {\r",
          "\r",
          "        if (!err) {\r",
          "            var json = res.json();\r",
          "            pm.environment.set(\"token\", json.token);\r",
          "            console.log(\"Token generated:\", json.token);\r",
          "        }\r",
          "    });\r",
          "}\r",
          ""
        ]
      }
